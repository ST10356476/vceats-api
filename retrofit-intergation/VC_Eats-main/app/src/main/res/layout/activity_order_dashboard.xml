<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".OrderDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@android:drawable/ic_menu_revert"
                tools:ignore="TouchTargetSizeCheck" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Dashboard"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage incoming orders and update their status"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRefresh"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="100dp"
                android:text="Refresh"
                android:textColor="#6B7280"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_popup_sync"
                app:iconGravity="textStart"
                app:strokeColor="#E5E7EB"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <!-- Order Status Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="16dp"
            android:background="@android:color/white">

            <!-- Pending Orders -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPending"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_orange"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/tvPendingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#F97316" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:textAlignment="center" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Preparing Orders -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPreparing"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_blue"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/tvPreparingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#3B82F6" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preparing"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:textAlignment="center" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ready Orders -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReady"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_green"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/tvReadyCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#10B981" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:textAlignment="center" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Completed Orders -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCompleted"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_gray"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/tvCompletedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#6B7280" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:textAlignment="center" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Filter and Order Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOrderFilter"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:text="All Orders"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="start|center_vertical"
                    app:strokeColor="#E5E7EB"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/arrow_down_float"
                    app:iconGravity="end"
                    app:iconTint="#6B7280" />

                <!-- Order Filter Dropdown -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/orderFilterDropdown"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:visibility="gone"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/filterAllOrders"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="All Orders"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/filterPending"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Pending"
                            android:textSize="14sp"
                            android:textColor="#F97316"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/filterPreparing"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Preparing"
                            android:textSize="14sp"
                            android:textColor="#3B82F6"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/filterReady"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Ready"
                            android:textSize="14sp"
                            android:textColor="#10B981"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/filterCompleted"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Completed"
                            android:textSize="14sp"
                            android:textColor="#6B7280"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvOrderCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Showing 0 of 0 orders"
                android:textSize="14sp"
                android:textColor="#6B7280" />

        </LinearLayout>

        <!-- Orders List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:clipToPadding="false"
            android:visibility="gone"
            tools:listitem="@layout/item_order" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layoutEmptyOrders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹"
                android:textSize="48sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No orders yet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders will appear here when customers place them"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>