<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed/Focused State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="2dp"
                android:color="#3B82F6" />
            <corners android:radius="8dp" />
            <padding
                android:left="12dp"
                android:right="32dp"
                android:top="16dp"
                android:bottom="16dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="2dp"
                android:color="#3B82F6" />
            <corners android:radius="8dp" />
            <padding
                android:left="12dp"
                android:right="32dp"
                android:top="16dp"
                android:bottom="16dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <layer-list>
            <!-- Background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <stroke
                        android:width="1dp"
                        android:color="#E5E7EB" />
                    <corners android:radius="8dp" />
                    <padding
                        android:left="12dp"
                        android:right="32dp"
                        android:top="16dp"
                        android:bottom="16dp" />
                </shape>
            </item>

            <!-- Dropdown Arrow -->
            <item
                android:gravity="end|center_vertical"
                android:right="12dp">
                <shape android:shape="rectangle">
                    <solid android:color="#6B7280" />
                    <size
                        android:width="0dp"
                        android:height="0dp" />
                </shape>
            </item>

            <!-- Arrow Icon -->
            <item
                android:gravity="end|center_vertical"
                android:right="12dp"
                android:drawable="@android:drawable/arrow_down_float" />
        </layer-list>
    </item>

</selector>